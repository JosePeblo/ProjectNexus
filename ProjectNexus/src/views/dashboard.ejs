    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <!-- <script src ="./scripts/charts.js"></script> -->
    <script>
        const ticket_status = document.getElementById('ticket_status');
        const burnup_chart = document.getElementById('burnup_chart');
        const backend_points = document.getElementById('backend-points');
        const frontend_points = document.getElementById('frontend-points');
        const team_weeks = document.getElementById('team-weeks');

        // Burnup Chart
        new Chart(burnup_chart,{
            type:'line',
            data:{
                labels: [<%= burnupChart.weeks %>],
                datasets:[
                    {
                    label:'Goal Points',
                    data: [<%= burnupChart.goal_points %>],
                    borderColor://azul marino
                    'rgb(1, 41, 95)',
                    backgroundColor://azul marino
                    'rgb(1, 41, 95)',
                    },
                    {
                    label:'Points Done',
                    data:[<%= burnupChart.points_done %>],
                    borderColor://tverde olivo
                    'rgb(132,147,36)',
                    backgroundColor://tverde olivo
                    'rgb(132,147,36)'
                    },
                    {
                    label:'Scope Points',
                    data:[<%= burnupChart.scope %>],
                    borderColor://azul teal
                    'rgb(67,127,151)',
                    backgroundColor://azul teal
                    'rgb(67,127,151)',
                    }
                ]
            },

            options: {
                responsive: true,
                interaction: {
                mode: 'index',
                intersect: false,
                },
                plugins: {
                    legend: {
                        position: 'bottom',
                        labels:{
                            padding: 30,
                            usePointStyle: true
                        }     
                    }
                },
                aspectRatio: 2
            }
        });

        // Backend Points
        new Chart(backend_points,{
            type: 'bar',
            options: {
                indexAxis: 'y',
                scales: {
                    x: {
                        stacked: true
                    },
                    y: {
                        stacked: true
                    }
                },
                plugins: {
                    legend: {
                        display: true,
                        position: 'bottom',
                        labels:{
                            usePointStyle: true,
                            font: {
                                size: 11,
                                weight: 'bold'
                            }
                        } 
                    }
                },
                responsive: true,
                aspectRatio: 4
            },
            
            data: {
                labels: [""],
                datasets: [
                    <% backendPoints.epics.forEach((epic,index) => { %>
                    {
                        label: '<%= backendPoints.epics[index] %>',
                        data: [<%= backendPoints.tickets_done_be_by_epic[index] %>],
                        backgroundColor: '<%=backendPoints.colors[index]%>'
                    },
                    <% }); %>
                    {
                        label: 'Missing',
                        data: [<%= backendPoints.story_points_missing %>],
                        backgroundColor: //tailwind gray-300
                        'rgb(209, 213, 219)'
                    }
                ]
            }
        });

        // Frontend Points
        new Chart(frontend_points,{
            type: 'bar',
            options: {
            indexAxis: 'y',
            scales: {
                x: {
                stacked: true
                },
                y: {
                stacked: true
                }
            },
            plugins: {
                legend: {
                display: true,
                position: 'bottom',
                labels:{
                    usePointStyle: true
                } 
                }
            },
            responsive: true,
            aspectRatio: 4
            },
            
            data: {
            labels: [""],

            datasets: [
                <% frontendPoints.epics.forEach((epic,index) => {%>
                {
                    label: '<%= frontendPoints.epics[index] %>',
                    data: [<%= frontendPoints.story_points_fe_done[index] %>],
                    backgroundColor: '<%=frontendPoints.colors[index]%>'
                },
                <%});%>
            {
                label: 'Missing',
                data: [<%= frontendPoints.story_points_fe_missing %>],
                backgroundColor: //tailwind gray-300
                'rgb(209, 213, 219)'
            }
             ]
            }
        });

        // Team weeks
        new Chart(team_weeks,{
            type: 'bar',
            options: {
            indexAxis: 'y',
            scales: {
                x: {
                stacked: true
                },
                y: {
                stacked: true
                }
            },
            plugins: {
                legend: {
                display: true,
                position: 'bottom',
                labels:{
                    usePointStyle: true
                } 
                }
            },
            responsive: true,
            aspectRatio: 4
            },
            
            data: {
            labels: [""],

            datasets: [{
                label: 'Frontend',
                data: [<%= teamWeeks.agile_points_fe%>],
                backgroundColor: //azul marino
                    'rgb(1, 41, 95)',
            },{
                label: 'Backend',
                data: [<%= teamWeeks.agile_points_be%>],
                backgroundColor://amarillo
                    'rgb(255, 179, 15)',
            }]
            }
        }
        );

        // Estimate vs Progress Chart
        new Chart(
        document.getElementById('estimate-progress'),{
            type: 'bar',
            options: {
            scales: {
                x: {
                stacked: true
                },
                y: {
                stacked: true
                }
            },
            plugins: {
                legend: {
                display: true,
                position: 'bottom',
                labels:{
                    padding: 40,
                    usePointStyle: true
                } 
                }
            },
            responsive: true,
            aspectRatio: 2
            },
            
            data: {
            <% let epics = estimateProgressChart.epics.map(item => JSON.stringify(item)) %>
            labels: [<%- epics %>],

            datasets: [{
                label: 'Progress',
                data: [<%= estimateProgressChart.progress %>],
                backgroundColor: [
                    //azul marino
                    'rgb(1, 41, 95)',
                    //azul teal
                    'rgb(67,127,151)',
                    //tverde olivo
                    'rgb(132,147,36)',
                    //amarillo
                    'rgb(255, 179, 15)',
                    //rojo
                    'rgb(253, 21, 27)',
                ]
            },{
                label: 'Estimate',
                data: [<%= estimateProgressChart.estimate %>],
                backgroundColor: //tailwind gray-200
                'rgb(229, 231, 235)',
                hoverBackgroundColor: "#C1C1C2"
            }]
            }
        }
        );

        //Ticket Status Chart
        new Chart(ticket_status, {
            type: 'doughnut',
            data: {
            labels: ['Done', 'To Do', 'In Progress', 'Code Review', 'Closed'],
            datasets: [{
                label: 'Ticket Percentage',
                data: [<%= ticket_status.done %>, <%= ticket_status.to_do %>, <%= ticket_status.code_review %>, <%= ticket_status.in_progress %>, <%= ticket_status.canceled %>],
                backgroundColor: [
                    //azul marino
                    'rgb(1, 41, 95)',
                    //azul teal
                    'rgb(67,127,151)',
                    //tverde olivo
                    'rgb(132,147,36)',
                    //amarillo
                    'rgb(255, 179, 15)',
                    //rojo
                    'rgb(253, 21, 27)',

                ],
                hoverOffset: 4
            }]
            },
            
            options: {
                plugins: {
                    legend: {
                        position: 'right',
                        labels:{
                            padding: 40,
                            usePointStyle: true
                        }     
                    }
                },
                aspectRatio: 2
            }
        });
    </script>
